<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ios_back"
    tools:context=".OpcjeFragments.LogInAsAdmin">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="60dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/text_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="-10dp"
            android:gravity="center"
            android:text="Nazwa uÅ¼ytkownika" />

        <EditText
            android:id="@+id/pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:width="20dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberPassword" />

        <TextView
            android:id="@+id/text_pin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:inputType="number"
            android:text="PIN" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_button_round_hard"
                android:gravity="center"
                android:text="Zaloguj"
                android:textColor="@color/primary_light" />

        </LinearLayout>

        <TextView
            android:id="@+id/test_json"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:foregroundGravity="bottom|center_horizontal"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="15dp" />

    </LinearLayout>

</FrameLayout>