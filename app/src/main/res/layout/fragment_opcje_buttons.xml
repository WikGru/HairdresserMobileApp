<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ios_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ios_back"
        android:orientation="vertical">

        <Button
            android:id="@+id/del_visit_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_button_round_soft"
            android:backgroundTint="?android:colorBackground"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:text="usuń historię wizyt"
            android:textColor="@drawable/button_round_soft_behaviour"
            android:textColorHighlight="@color/accent" />

        <Button
            android:id="@+id/login_as_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_button_round_soft"
            android:backgroundTint="?android:colorBackground"
            android:gravity="left|center_vertical"
            android:onClick="OnClickLogIn"
            android:paddingLeft="30dp"
            android:text="zaloguj jako administrator"
            android:textColor="@drawable/button_round_soft_behaviour"
            android:textColorHighlight="@color/accent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/LikeFiona"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_gravity="center"
                android:background="@drawable/fejsy" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/fb_link" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>